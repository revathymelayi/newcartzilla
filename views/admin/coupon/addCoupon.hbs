<div class="col-12">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="title-header option-title">
                        <h5>Create Coupon</h5>
                    </div>
                    {{#if error}}
                        <div class="alert alert-danger" role="alert">
                            <strong>Error! </strong> {{error}}
                        </div>
                    {{/if}}
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-home" role="tabpanel">
                            <form action="/admin/create/coupon" method="post" class="theme-form theme-form-2 mega-form">

                                <div class="row">
                                    <div class="mb-4 row align-items-center">
                                        <label
                                            class="form-label-title col-lg-2 col-md-3 mb-0">Coupon
                                            Title</label>
                                        <div class="col-md-9 col-lg-10">
                                            <input class="form-control" required name="title" type="text">
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label
                                            class="col-lg-2 col-md-3 col-form-label form-label-title">Coupon
                                            Code</label>
                                        <div class="col-md-9 col-lg-10">
                                            <input class="form-control" required name="code" type="text">
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label
                                            class="col-lg-2 col-md-3 col-form-label form-label-title">Discount
                                            </label>
                                        <div class="col-md-9 col-lg-10">
                                            <input class="form-control" min="1" max="50"   required name="discount" type="number">
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label
                                            class="col-lg-2 col-md-3 col-form-label form-label-title">Expiry
                                            Date</label>
                                        <div class="col-md-9 col-lg-10">
                                            <input class="form-control" min="{{date}}"" required name="date" type="date">
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label
                                            class="col-sm-2 col-form-label form-label-title">Discount
                                            Type</label>
                                        <div class="col-sm-10">
                                            <select class="js-example-basic-single"
                                                name="state" required>
                                                <option disabled>--Select--</option>
                                                <option>Percent</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row align-items-center mb-4">
                                        <label
                                            class="form-label-title col-lg-2 col-md-3 mb-0">Status</label>
                                        <div class="col-md-9">
                                            <div class="form-check user-checkbox ps-0">
                                                <input name="status" class="checkbox_animated check-it"
                                                    type="checkbox" id="flexCheckDefault1">
                                                <label class="form-label-title col-md-2 mb-0">
                                                    Enable the Coupon</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button class="align-items-center btn btn-theme" type="submit"><i data-feather="plus-square"></i>Add Coupon</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>