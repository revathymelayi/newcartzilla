 async  function placeOrder(){
      
  
 
   
  
    
    
  
    const paymentgateway=Object.values(document.getElementsByName('payment_method')).filter((item)=>item.checked ? item : '').map((item)=> item.value)
    const productid=Object.values(document.getElementsByName('productid')).map((item)=>item.id)
    const price=Object.values(document.getElementsByName('price')).map((item)=>item.id)
    const quantity=Object.values(document.getElementsByName('quantity')).map((item)=>item.id)
    const addressid=Object.values(document.getElementsByName('addressids')).filter((item)=>item.checked ? item : '').map((item)=> item.id)
    const actualAmount=document.getElementById('actualAmount').value
    const total=document.getElementById('totalPricecheckout').innerText
    const couponAmount = document.getElementById('coupon').innerText
    if(addressid.length==1 || paymentgateway.length==1){
      let data={
      productid:productid,
      price:price,
      quantity:quantity,
      addressid:addressid,
      payment_method:paymentgateway[0],
      actualAmount:actualAmount,
      couponAmount:couponAmount,
      total:total,
    }
    try {
      const orderplacement = await fetch('/place-order',{
              method :'post',
              headers: {
                  'Content-Type': 'application/json',
              },
              body:JSON.stringify(data)
          })
          let res=await orderplacement.json()
           if(res=="success"){
              Swal.fire({
                  title: 'Success',
                  text: "Item orderd successfully !",
                  icon: 'success',
                  confirmButtonColor: '#3085d6',
                  cancelButtonColor: '#d33',
                  confirmButtonText: 'OK',
                  timer: 3000
              }).then((res)=>{
                window.location.href ='/orders'
              })
             } else if(res=="redirect-to-payment"){
                window.location.href ='/payment-gateway'
             }else Swal.fire({
                  title: 'Something went wrong',
                  text: "something went wrong !",
                  icon: 'success',
                  confirmButtonColor: '#3085d6',
                  cancelButtonColor: '#d33',
                  confirmButtonText: 'OK',
                  timer: 3000
              })
      } catch (error) {
      console.log(error)
      }
    }else{
     
       Swal.fire({
                  title: 'Please Check',
                  text: "Select the options",
                  icon: 'warning',
                  confirmButtonColor: '#3085d6',
                  cancelButtonColor: '#d33',
                  confirmButtonText: 'OK',
                  timer: 3000
              })
      
    }
   
    
    }
  
   async function redeemCoupon(){
      const coupon = document.getElementById('promocard').value
      let response = await fetch('/redeem-coupon', {
          method: 'put',
          headers: {
              'Content-Type': 'application/json',
          },
          body: JSON.stringify({coupon:coupon}),
      });
      let result = await response.json();
        if(result.error ){
           document.getElementById('error-message').innerText= result.error
        }else{

           const amount = result.amount
           const actualAmount = document.getElementById('actualAmount').value
           const discountAmount=actualAmount*amount/100
           const newAmount=actualAmount-discountAmount

           document.getElementById('couponAmount').value=amount
           document.getElementById('total').innerText=newAmount
           document.getElementById("totalPricecheckout").innerText=newAmount
           document.getElementById('coupon').innerText = discountAmount
           document.getElementById('error-message').innerText =""
        }
    }
  





