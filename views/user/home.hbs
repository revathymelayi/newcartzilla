 <!-- Popular categories-->
     <section class="container position-relative pt-3 pt-lg-0 pb-5 mt-lg-n10" style="z-index: 10;">
        <div class="row">
          <div class="col-xl-8 col-lg-9">
            <div class="card border-0 shadow-lg">
              <div class="card-body px-3 pt-grid-gutter pb-0">
                <div class="row g-0 ps-1">
                  {{#each categories}}
                  <div class="col-sm-4 px-2 mb-grid-gutter"><a class="d-block text-center text-decoration-none me-1" href="/category/{{name}}/{{_id}}" ><img class="d-block rounded mb-3" src="/admin/images/category/{{image}}" alt="Men">
                      <h3 class="fs-base pt-1 mb-0">{{name}}</h3></a></div>
                      {{/each}}
                  
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- Products grid (Trending products)-->
      <section class="container pt-md-3 pb-5 mb-md-3">
        <h2 class="h3 text-center">Trending products</h2>
        <div class="row pt-4 mx-n2">
          <!-- Product-->
          {{#each products}}
          <div class="col-lg-3 col-md-4 col-sm-6 px-2 mb-4">
            <div class="card product-card">
              <button class="btn-wishlist btn-sm" type="button" data-bs-toggle="tooltip" data-bs-placement="left" title="Add to wishlist"><i class="ci-heart"></i></button><a class="card-img-top d-block overflow-hidden" href="/product/{{name}}/{{_id}}"><img src="/admin/images/products/{{thumbnail_image}}" alt="Product"></a>
              <div class="card-body py-2"><a class="product-meta d-block fs-xs pb-1" href="/product/{{name}}/{{_id}}"></a>
                <h3 class="product-title fs-sm"><a href="shop-single-v1.html">{{name}}</a></h3>
                <div class="d-flex justify-content-between">
                  <div class="product-price"><span class="text-accent"><small>â‚¹{{price}}</small></span></div>
                  <div class="star-rating"><i class="star-rating-icon ci-star-filled active"></i><i class="star-rating-icon ci-star-filled active"></i><i class="star-rating-icon ci-star-filled active"></i><i class="star-rating-icon ci-star-half active"></i><i class="star-rating-icon ci-star"></i>
                  </div>
                </div>
              </div>
            
             
            </div>
            <hr class="d-sm-none">
          </div>
          {{/each}}
        
        </div>
        <div class="text-center pt-3"><a class="btn btn-outline-accent" href="shop-grid-ls.html">More products<i class="ci-arrow-right ms-1"></i></a></div>
      </section>
